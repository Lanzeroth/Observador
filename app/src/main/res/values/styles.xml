<resources>

    <style name="MyToolbar" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/indigo_100</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="TextViewDrawerMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">roboto_medium</item>
    </style>

    <style name="RobotoEditTextLogin">
        <item name="typeface">roboto_medium</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:color">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RobotoButtonOCR">
        <item name="typeface">roboto_medium</item>
        <item name="android:textColor">@color/indigo_100</item>
        <item name="android:background">@drawable/custom_button_ocr</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextViewIntroDesc">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="typeface">roboto_medium</item>
    </style>

    <!--<style name="ButtonAppTheme" parent="android:Widget.Material.Button">-->
    <style name="ButtonAppTheme" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/custom_button_ocr</item>
    </style>

</resources>
